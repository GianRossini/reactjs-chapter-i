{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Understand that we're dealing with the DOM, adding types that didn't exist before
    "allowJs": true, // We can have both JS and TS files
    "jsx": "react-jsx", // Informs that we are using React jsx
    "noEmit": true, // Do not issue code when running the build
    "strict": true, // Strict mode -> handle errors
    "moduleResolution": "node",
    "resolveJsonModule": true, // Allows importing JSON files
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src"] // Where the code will be
}
